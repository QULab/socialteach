<h1>Edit your Profile Picture</h1>

<%= form_for(@user, html:{multipart:true}) do |f| %>
<p>
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday, :start_year=>1950 %>
</p>

<p><%= f.file_field :avatar %></p>

<p>
    <%= f.label :aboutme %><br />
    <%= f.text_field :aboutme%>
</p>


<%= f.submit "Save Change" %>
<% end%>