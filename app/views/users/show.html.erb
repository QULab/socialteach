<div class="container">
    <div class="page-header">
  <h1><%= @user.username %>'s Profile
    <% unless @user.id == current_user.id %>
      <%= link_to friendships_path(:friend_id => @user), :method => :post, class: "btn btn-primary" do %>
        Add friend
      <%- end %>
    <% end %></h1>
	</div>
	<div class="row">
  <div class="col-xs-6 col-md-4">
  	<p> <%= avatar_for(@user) %></p> 
    <% if @user.birthday != nil %> <p> My Birthday : <%= @user.birthday.strftime("%d.%m.%Y")   %></p> <% end %>
    <p> My Badges :  </p>
    <p> Learning Points : <%= @user.points(category: "Learningpoints") %></p>
    <p> Social Points : <%= @user.points(category: "Socialpoints") %> </p>
</div>
  <div class="col-xs-6 col-md-4">    
  	<h1>About me :</h1>
  	<p><%= @user.aboutme %></p>

    <div>
      <% @users = User.all %>
      <% @users.each do |user| %>
        <%-# dont show urself in userlist -%>
        <% unless user.id == current_user.id %>
              <div class="row">
                <strong><%= user.username %></strong>
                <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
              </div>
        <% end %>
      <% end %>
    </div>

    <div>
      <h2>My friends on socialteach:</h2>
      <% for friendship in @user.friendships %>
        <li>
          <%= friendship.friend.username %>
          (<%= link_to "remove", friendship, :method => :delete %>)
        </li>
      <% end %>

      <h2>Friended by Users:</h2>
      <% for friendship in @user.inverse_friendships %>
        <li>
          <%= friendship.friend.username %>
        </li>
      <% end %>
    </div>

</div>

</div>

<div class="div2">

       <% if @user.id==current_user.id %><p> <%= link_to "Edit Profile", users_edit_profile_path() %></p><% end %>
</div>
</div>

