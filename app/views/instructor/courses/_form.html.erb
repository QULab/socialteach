<%= form_for([:instructor, @course]) do |f| %>

  <% if @course.errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <h4><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h4>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <div class="controls">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, class: "form-control"%>
      </div>
    </div>

        <div class="control-group">
          <div class="controls">
            <%= f.label :description, class: "control-label" %>
            <%= f.text_area :description, rows: 3, class: "form-control" %>
            <%= f.hidden_field :creator_id, :value => current_user.id, class: "form-control" %>
          </div>

        </div>
    <br>
    <div class="form-group">
      <div class="controls">
        <%= f.label :published, class: "control-label", id: "published-check-label" %>
        <%= f.check_box :published, class: "checkbox", id: "published-check-box" %> Publish your Course to make it visible to Users
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit class: "btn btn-default btn-primary btn-block btn-success"%>
    </div>
  </fieldset>

<% end %>
