<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Editing Course</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= render 'form' %>
      <%= link_to 'Back', instructor_courses_path, class: "btn btn-link" %>
      <%= link_to 'Add Chapter', new_instructor_chapter_path(:course_id => @course.id) , class: "btn btn-link" %>
      <div class="row">
        <div class="list-group">
          <% @course.chapters.each do |chapter| %>
            <%= link_to instructor_chapter_path(chapter), class: "list-group-item" do %>
              <%= chapter.name %>
              <i class="fa fa-trash"></i>
              <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-9">
      <%= render partial: 'graph', locals: {type: "courses", data: @course} %>
    </div>
  </div>
</div>
