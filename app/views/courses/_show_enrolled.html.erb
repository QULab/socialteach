<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>
        <%= course.name %>
        <% enrollment = current_user.get_enrollment(course)%>
        <small>Started <%= time_ago_in_words(enrollment.created_at) %> ago</small>
      </h1>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= course.description%>
        </div>
      </div>
      <%= link_to curriculum_course_path, class: "btn btn-primary" do %>
        <i class="fa fa-tasks"></i>
        Show Curriculum
      <%- end %>
    </div>
  </div>

  <div class="row">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 35%">
        35% Complete
      </div>
    </div>
  </div>

  <div class="row">
    <h4>
      Recommended Activities
    </h4>
    <div class="list-group">
      <%- #TODO use a real function to get recommended activities %>
      <%- course.chapters.first.activities.each do |act| %>
        <%= link_to activity_path(act), class: "list-group-item" do %>
          <h4 class="list-group-item-heading">
            <i class="fa <%= activity_icon(act) =%>"></i>
            <%= act.name %>
          </h4>
          <p class="list-group-item-text">
            From:
            <%= act.chapter.name %>
            <span class="badge"><%= act.levelpoints %></span>
          </p>
        <%- end %>
      <%- end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="page-header">
        <h1>
          <i class="fa fa-1x fa-star"></i>
          Badges
        </h1>
      </div>
    </div>
    <div class="col-md-4">
      <div class="page-header">
        <h1>
          <i class="fa fa-1x fa-bar-chart"></i>
          Statistics
        </h1>
         <%= render 'statistics/coursegraph' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="page-header">
        <h1>
          <i class="fa fa-1x fa-trophy"></i>
          Leaderboards
        </h1>
      </div>
    </div>
  </div>

  <div class="row">
    <%= render 'shared/comments', commentable: course %>
    <%= render 'shared/feedback', commentable: course %>
  </div>
</div>
