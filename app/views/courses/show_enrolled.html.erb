<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>
        <%= @course.name %>
        <small>Started <%= time_ago_in_words(@enrollment.created_at) %> ago</small>
      </h1>
      <%= link_to curriculum_course_path, class: "btn btn-primary" do %>
        <i class="fa fa-tasks"></i>
        Continue Learning
      <%- end %>
    </div>
  </div>

  <div class="row">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 35%">
        35% Complete
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="page-header">
        <h1>
          <i class="fa fa-1x fa-star"></i>
          Badges
        </h1>
      </div>
    </div>
    <div class="col-md-4">
      <div class="page-header">
        <h1>
          <i class="fa fa-1x fa-bar-chart"></i>
          Statistics
        </h1>
      </div>
    </div>
    <div class="col-md-4">
      <div class="page-header">
        <h1>
          <i class="fa fa-1x fa-trophy"></i>
          Leaderboards
        </h1>
      </div>
    </div>
  </div>

  <div class="row">
    <%= render 'shared/comments', commentable: @course %>
  </div>
</div>
