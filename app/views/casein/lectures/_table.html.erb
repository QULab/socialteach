<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "Course", :course %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% lectures.each do |lecture| %>
		<tr>
			<td><%= casein_table_cell_link lecture.name, casein_lecture_path(lecture) %></td>
			<td><%= casein_table_cell_link lecture.description, casein_lecture_path(lecture) %></td>
			<td><%= casein_table_cell_link lecture.course, casein_lecture_path(lecture) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_lecture_path(lecture), :method => :delete, :data => { :confirm => "Are you sure you want to delete this lecture?" }) %>
			</td>
		</tr>
	<% end %>
</table>